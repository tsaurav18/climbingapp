CREATE DATABASE IF NOT EXISTS climbing
DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;

USE climbing

CREATE TABLE IF NOT EXISTS user(
	id VARCHAR(64) PRIMARY KEY COMMENT "email",
	password VARCHAR(32),
	name VARCHAR(32),
	gender VARCHAR(10),
	dob VARCHAR(10),
	ts TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE TABLE IF NOT EXISTS postmountain(
	no INT UNSIGNED AUTO_INCREMENT PRIMARY KEY COMMENT "sequence",
	id VARCHAR(32) COMMENT "same as the table user",
	content VARCHAR(4096),
	ts TIMESTAMP DEFAULT CURRENT_TIMESTAMP

);


CREATE TABLE IF NOT EXISTS mountains(
	no INT UNSIGNED AUTO_INCREMENT PRIMARY KEY COMMENT "sequence",
	content VARCHAR(6096),
	ts TIMESTAMP DEFAULT CURRENT_TIMESTAMP

);
